
<%# params.inspect %>
<h2>
  <%= @animal['name'] %>
<h2>

<p>
  <strong>Species:</strong>
  <%= @animal['species'] %>
</p>

<p>
  <strong>Roundness:</strong>
  <%= @animal['roundness'] %>
</p>

<p>
  <strong>Description</strong>
  <%= @animal['description'] %>
</p>

<p>
  <strong>Age:</strong>
  <%= @animal['age'] %>
</p>

<p>
  <strong>Alive:</strong>
  <%= @animal['alive'] == 1 ? 'Yes' : 'No' %>
</p>

<p>
  <strong>Spotters:</strong>
  <ul>
    <% @animal.spotters.each do |spotter| %>
    <li>
      <%= spotter.name %> (<%= spotter.location %>)
    </li>
    <% end %>
  </ul>
</p>

<img src="<%= @animal['image_url']%>" alt="<%= @animal['name'] %>">
